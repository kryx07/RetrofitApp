<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <Button
        android:id="@+id/get_activity_button"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="@string/button_get_activities" />

    <Button
        android:id="@+id/get_clients_button"
        android:layout_width="match_parent"
        android:layout_above="@id/get_activity_button"
        android:layout_height="wrap_content"
        android:text="@string/button_get_clients" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/clients_recycler"
        android:layout_width="match_parent"
        android:layout_above="@id/get_clients_button"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />



</RelativeLayout>